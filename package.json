{
  "name": "clarnote",
  "version": "1.0.0",
  "description": "AI-powered meeting assistant with transcription, summaries, and action items",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:production": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "build:mobile": "BUILD_MODE=mobile prisma generate && BUILD_MODE=mobile next build && npx cap sync",
    "dev:ios": "npm run build:mobile && npx cap run ios",
    "dev:android": "npm run build:mobile && npx cap run android",
    "open:ios": "npx cap open ios",
    "open:android": "npx cap open android",
    "build:prod:ios": "npm run build:mobile && cd ios && xcodebuild -workspace App.xcworkspace -scheme App -configuration Release -destination generic/platform=iOS -archivePath ./build/App.xcarchive archive",
    "build:prod:android": "npm run build:mobile && cd android && ./gradlew assembleRelease",
    "build:testflight": "npm run build:prod:ios && cd ios && xcodebuild -exportArchive -archivePath ./build/App.xcarchive -exportPath ./build/ -exportOptionsPlist ./App/exportOptions.plist",
    "build:internal-testing": "npm run build:prod:android && echo 'APK ready for Android Internal Testing at: android/app/build/outputs/apk/release/app-release.apk'",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "db:deploy": "prisma migrate deploy",
    "postinstall": "prisma generate",
    "sync:config": "npx tsx scripts/sync-config.ts",
    "audit:env": "npx tsx scripts/audit-env.ts",
    "test:auth:local": "AUTH_TEST_URL=http://localhost:3000 playwright test tests/auth.smoke.spec.ts",
    "test:auth:prod": "AUTH_TEST_URL=https://www.clarnote.com playwright test tests/auth.smoke.spec.ts",
    "test:auth:staging": "AUTH_TEST_URL=https://staging.clarnote.com playwright test tests/auth.smoke.spec.ts"
  },
  "dependencies": {
    "@capacitor/android": "^7.4.2",
    "@capacitor/app": "^7.0.1",
    "@capacitor/camera": "^7.0.1",
    "@capacitor/cli": "^7.4.2",
    "@capacitor/core": "^7.4.2",
    "@capacitor/device": "^7.0.1",
    "@capacitor/filesystem": "^7.1.4",
    "@capacitor/haptics": "^7.0.1",
    "@capacitor/ios": "^7.4.2",
    "@capacitor/splash-screen": "^7.0.1",
    "@capacitor/status-bar": "^7.0.1",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^6.1.0",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-tabs": "^1.1.1",
    "@stripe/stripe-js": "^7.8.0",
    "@supabase/supabase-js": "^2.53.0",
    "autoprefixer": "^10.4.21",
    "bcryptjs": "^2.4.3",
    "capacitor-voice-recorder": "^7.0.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "html2canvas": "^1.4.1",
    "jspdf": "^2.5.2",
    "lucide-react": "^0.462.0",
    "next": "15.1.3",
    "next-auth": "^4.24.11",
    "openai": "^4.77.3",
    "pdf-lib": "^1.17.1",
    "prisma": "^6.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "resend": "^6.0.1",
    "stripe": "^18.4.0",
    "tailwind-merge": "^2.6.0",
    "zod": "^3.25.76",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "dotenv": "^17.2.1",
    "eslint": "^8",
    "eslint-config-next": "15.1.3",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  },
  "keywords": [
    "ai",
    "meeting",
    "transcription",
    "openai",
    "whisper",
    "gpt-4",
    "nextjs",
    "typescript"
  ],
  "author": "Clarnote Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
